extends ../../layouts/auth.pug

include ../../mixins/box-head

block auth
    .auth-container
        .auth-card
            +box-head("Đăng ký tài khoản")
            form(action="/auth/register" method="POST")
                .form-group
                    label(for="fullname") Họ và tên
                    input#fullname(type="text" name="fullName" placeholder="Nhập họ và tên..." required)

                .form-group
                    label(for="email") Email
                    input#email(type="email" name="email" placeholder="Nhập email..." required)

                .form-group
                    label(for="password") Mật khẩu
                    input#password(type="password" name="password" placeholder="Nhập mật khẩu..." required)

                .form-group
                    label(for="confirmPassword") Nhập lại mật khẩu
                    input#confirmPassword(type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu..." required)

                button.btn-primary(type="submit") Đăng ký

            p.auth-footer
                | Đã có tài khoản?
                a(href="/auth/login") Đăng nhập